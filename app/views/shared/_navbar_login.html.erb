<ul class="navbar-nav mr-auto">
  <% unless logged_in? %>
    <li class="nav-item" data-turbo="false">
      <form action="auth/auth0" method="post" data-turbo="false">
        <%= button_to 'Login', 'auth/auth0', class: "btn btn-primary", data: { turbo: false } %>
      </form>
    </li>
  <% end %>
  <% if logged_in? %>
    <li class="nav-item">
      <div class="dropdown dropleft">
        <%= image_tag user_gravatar, class: 'gravatar', 'aria-expand': false, 'aria-haspopup': true, 'data-toggle': 'dropdown', id: 'dropdownMenuButton1' %>
        <div aria-labelledby="dropdownMenuButton1" class="dropdown-menu">
          <h6 class="dropdown-header"><%= current_user.name %></h6>
          <div class="dropdown-divider"></div>
          <%= link_to 'Logout', auth0_logout_url, class: 'dropdown-item' %>
        </div>
      </div>

    </li>
  <% end %>
</ul>
