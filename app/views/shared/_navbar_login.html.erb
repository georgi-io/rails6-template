<ul class="navbar-nav mr-auto">
  <li class="nav-item">
    <%= link_to 'Login', 'auth/auth0', method: :post, class: "nav-link" unless current_user %>
  </li>
  <% if current_user %>
    <span class="navbar-text">
      <%= current_user.name %>
    </span>

    <li class="nav-item">
      <%= link_to 'Logout', auth0_logout_url, class: 'nav-link' %>
    </li>
    <li class="nav-item">
      <%= image_tag user_gravatar, class: 'gravatar' %>
    </li>
  <% end %>
</ul>
